<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.baloncesto.ScoreViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- Columna para el Equipo A -->
        <LinearLayout
            android:id="@+id/llTeamA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/llTeamB"
            app:layout_constraintHorizontal_weight="1">

            <TextView
                android:id="@+id/tvTeamAName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvScoreA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{String.valueOf(viewModel.scoreA)}'
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Botones para sumar puntos al Equipo A -->
            <Button
                android:id="@+id/btnFreeA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnTwoA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnThreeA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3" />
        </LinearLayout>

        <!-- Columna para el Equipo B -->
        <LinearLayout
            android:id="@+id/llTeamB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/llTeamA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1">

            <TextView
                android:id="@+id/tvTeamBName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo B"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvScoreB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{String.valueOf(viewModel.scoreB)}'
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Botones para sumar puntos al Equipo B -->
            <Button
                android:id="@+id/btnFreeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnTwoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnThreeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3" />
        </LinearLayout>

        <!-- BotÃ³n Reset en la parte inferior centrado -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
